<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ComicBookStore.styles.css" asp-append-version="true" />

    <style>

        body {
            background-color: #F95738;
        }


        .navbar-collapse {
            background-color: #F72C25;
            list-style-type: none;
            margin: 0;
            padding: 0;
            border: 5px;
            width: 100%;
            display: flex;
            justify-content: center;
        }
        .navbar-brand {
            background-color: #F72C25;
            border-right: 3px;
            width: 200px; /* adjust the value as needed */
            border-style: double;
        }

        nav {
            background-color: #333;
            overflow: hidden;
            text-align: center;
            display: flex;
            justify-content: center;
        }

            nav a {
                float: left;
                color: white;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size: 17px;
            }

                nav a:hover {
                    background-color: #F6EB2D;
                    color: black;
                }

        footer {
            text-align: center;
            background-color: #040F16;
            color: white;
            width: 100%;
            height: 40px;
            left: 0;
            bottom: 0;
            top: 5px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: auto;
        }

        .navbar-1 {
            margin-right: 90px;
        }

        .navbar-2 {
            margin-right: 100px;
        }

        .navbar-3 {
            margin-right: 110px;
        }

        .navbar-4 {
            margin-right: 120px;
        }

        .navbar-5 {
            margin-right: 130px;

        }

       

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container nav-container">
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">

                        <li class="navbar-1">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="navbar-2">
                            <a class="nav-link text-white" asp-area="" asp-page="/Favorites">Favorites</a>
                        </li>
                        <li class="navbar-3">
                            <a class="nav-link text-white" asp-area="" asp-page="/Location">Location</a>
                        </li>
                        <li class="navbar-4">
                            <a class="nav-link text-white" asp-area="" asp-page="/About Us">About Us</a>
                        </li>
                        <li class="navbar-5">
                            <a class="nav-link text-white" asp-area="" asp-page="/Latest news">Latest News</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <p>Leonard du Plessis - 20232128 - Software Developer</p>
    </footer>
    


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>